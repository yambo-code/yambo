   fi ; \
   ./sbin/make_makefile.sh $$XPATH $$exe .objects x $$LLIBS $(xcpp) $$ADF ; \
   cd $$XPATH ; $(MAKE) VPATH=$$VPATH || exit "$$?" ; \
  fi ; \
  echo " " ; \
 done
