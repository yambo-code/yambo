# All libs #
#
libs:	ext-libs int-libs
#
# Download external libs #
#
get_extlibs:
	@+mkdir -p lib/archive; \
	if [ $(topdir) != $(prefix) ] ; then \
	cp $(topdir)/lib/archive/* lib/archive; \
	cp $(topdir)/config/missing config/ ; \
	fi ; \
	cd lib/archive; $(MAKE) -f Makefile.loc all;
