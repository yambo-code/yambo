if [ $# = 0 ] ; then exit 0; fi
target=$1
#
# SAVE the objects relative to the current project (if any)
#
if test `find . -maxdepth 1 -name '__*' | wc -l` -ge 1 ; then
 for file in __*
 do
 echo "Saving objects in .objects$file";
  if test `find . -maxdepth 1 -name '*.o' | wc -l` -ge 1 ; then
   if test ! -d .objects$file; then mkdir .objects$file; fi
   mv *.o .objects"$file"/
   if test -f modfiles.list; then
     echo "Saving modules in .objects$file";
     while read modfile; do
       mv ../../include/"$modfile" .objects"$file"/
     done < modfiles.list
   fi
  fi
  rm -f $file
 done
fi
#
# In any case I will now compile the TARGET objects
#
touch "$target"
#
# If the TARGET objects dir exists just copy the objects from there
#
if test -d .objects$target; then
 if test `find .objects$target/ -name '*.o' | wc -l` -ge 1 ; then
  echo "Loading objects from $target";
  mv .objects$target/*.o .
 fi
 if test `find .objects$target/ -name '*.mod' | wc -l` -ge 1 ; then
  echo "Loading modules from $target";
  mv .objects$target/*.mod ../../include/
 fi
fi
